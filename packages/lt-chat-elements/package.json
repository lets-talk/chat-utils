{
  "name": "@letstalk/lt-chat-elements",
  "version": "1.2.8",
  "description": "React Component Library with a set of chat components that help implment LetsTalk interfaces.",
  "main": "build/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build:analyze": "webpack --config webpack.config.dev.js --json > webpack-stats.json",
    "build": "webpack --config webpack.config.dev.js --progress --colors",
    "build:prod": "webpack --config webpack.config.prod.js --progress --profile --colors",
    "build:watch": "babel lib -w -d build",
    "lint": "eslint lib/**; exit 0",
    "lint:watch": "esw -w lib/**",
    "changelog": "pr-log --sloppy",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "storybook": "cross-env NODE_ENV=development start-storybook -p 9001 -c .storybook -s ./lib/assets",
    "storybook:build": "build-storybook -c .storybook -o ../../docs/storybook",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:coverage": "jest --verbose --coverage",
    "test:generate-output": "jest --json --outputFile=tests-results/jest-test-results.json"
  },
  "keywords": [
    "react",
    "react-component",
    "letstalk toolkit",
    "lt-chat-elements"
  ],
  "author": "Sandino Nunez",
  "license": "ISC",
  "devDependencies": {
    "@storybook/addon-info": "4.0.0-alpha.2",
    "@storybook/addon-jest": "4.0.0-alpha.2",
    "@storybook/addon-knobs": "4.0.0-alpha.2",
    "@storybook/addon-options": "4.0.0-alpha.2",
    "@storybook/addon-storyshots": "4.0.0-alpha.2",
    "@storybook/react": "4.0.0-alpha.2",
    "babel-cli": "6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.3",
    "babel-plugin-css-modules-transform": "1.5.0",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "5.1.4",
    "css-loader": "0.28.11",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.3",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "eslint-watch": "3.1.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "lerna": "2.10.1",
    "lint-staged": "7.0.4",
    "node-sass": "^4.8.3",
    "postcss": "6.0.21",
    "postcss-cssnext": "3.1.0",
    "postcss-loader": "2.1.3",
    "react-test-renderer": "16.3.1",
    "sass-extract": "^2.1.0",
    "sass-extract-js": "^0.3.0",
    "sass-extract-loader": "^1.1.0",
    "sass-loader": "7.0.1",
    "sinon": "4.5.0",
    "style-loader": "0.20.3",
    "webpack": "4.5.0",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-cli": "^2.0.14"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "polished": "^1.9.2",
    "prop-types": "15.6.1",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "react-icons": "^2.2.7",
    "react-loadable": "^5.3.1",
    "react-transition-group": "2.3.0",
    "styled-components": "3.2.5"
  },
  "readme": "ERROR: No README data found!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lets-talk/lt-tool-kit.git"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/lib/test-utils/jest.setup.js",
    "testMatch": [
      "<rootDir>/lib/components/**/__tests__/**/*.js?(x)",
      "<rootDir>/lib/utils/**/__tests__/**/*.js?(x)",
      "**/?(*.).js?(x)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/lib/test-utils/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/lib/test-utils/__mocks__/styleMock.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "collectCoverage": true,
      "coverageFormats": [
        "json",
        "html"
      ],
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      },
      "./lib/utils/*.js": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "class-methods-use-this": 0,
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/no-webpack-loader-syntax": 0,
      "import/prefer-default-export": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "jsx-a11y/aria-props": 2,
      "jsx-a11y/heading-has-content": 0,
      "jsx-a11y/label-has-for": 2,
      "jsx-a11y/mouse-events-have-key-events": 2,
      "jsx-a11y/role-has-required-aria-props": 2,
      "jsx-a11y/role-supports-aria-props": 2,
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "no-console": 1,
      "no-use-before-define": 0,
      "prefer-template": 2,
      "react/forbid-prop-types": 0,
      "react/jsx-first-prop-new-line": [
        2,
        "multiline"
      ],
      "react/jsx-filename-extension": 0,
      "react/jsx-no-target-blank": 0,
      "react/require-default-props": 0,
      "react/require-extension": 0,
      "react/self-closing-comp": 0,
      "require-yield": 0
    }
  },
  "lint-staged": {
    "lib/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "publishConfig": {
    "registry": "http://localhost:4873/"
  }
}

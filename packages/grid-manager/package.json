{
  "name": "lt-grid-manager",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "main": "dist/grid-manager.js",
  "module": "dist/grid-manager.module.js",
  "unpkg": "dist/grid-manager.umd.js",
  "scripts": {
    "build": "microbundle --external=none",
    "dev": "microbundle --external=none watch",
    "test": "jest",
    "format": "prettier --write \"**/*.js{,on}\" \"**/*.md\"  \"**/*.mdx\"",
    "serve": "cp index.html dist/ && yarn http-server ./dist -p 9000",
    "cy:run": "npx cypress run",
    "cy:open": "yarn run cypress open"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "useTabs": true,
    "tabWidth": 2
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.1",
    "@testing-library/dom": "^7.26.3",
    "@types/cypress": "^1.1.3",
    "@xstate/test": "^0.4.1",
    "cypress": "^5.4.0",
    "eslint": "5.15.1",
    "eslint-config-developit": "^1.1.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-react": "7.12.4",
    "html-webpack-plugin": "^4.4.1",
    "http-server": "^0.12.3",
    "husky": "^3.0.9",
    "prettier": "^1.18.2",
    "typescript": "3.5.3"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "xstate": "^4.13.0"
  }
}
